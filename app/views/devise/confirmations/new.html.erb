<!-- Page Content -->
<div class="container">
  <!-- Forgot your password Form -->  
  <div class="row">
    <div class="col-md-8">
      <h3>Resend Confirmation Instructions</h3>
      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <span class='error'><%= devise_error_messages! %></span>
      <div class="control-group form-group">
        <div class="controls">
          <label>Email:</label>
          <%= f.email_field :email, :class=>"form-control", :required => true, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
        </div>
      </div>
      <div id="success"></div>
      <!-- For success/fail messages -->

      <div class="actions">
        <%= f.submit "Resend confirmation instructions", :class => "btn btn-primary" %>
      </div>

      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <!-- /.row -->
  <!-- Footer -->
  <%= render :partial => 'layouts/footer' %>
</div>
<!-- /.container -->