<!-- Page Content -->
<div class="container">
  <!-- Page Heading/Breadcrumbs -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Sign Up
        <small>Account</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="/">Home</a>
        </li>
        <li class="active">Sign Up</li>
      </ol>
    </div>
  </div>
  <!-- /.row -->
  <!-- Content Row -->
  <div class="row">
    <div class="col-md-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <span class='error'><%= devise_error_messages! %></span>
      <div class="control-group form-group">
        <div class="controls">
          <label>Name:</label>
          <%= f.text_field :name, :class=>"form-control", :required => true, autofocus: true %>
        </div>
      </div>
      <div class="control-group form-group">
        <div class="controls">
          <label>Email:</label>
          <%= f.email_field :email, :class=>"form-control", :required => true %>          
        </div>
      </div>
      <div class="control-group form-group">
        <div class="controls">
          <label>Phone number:</label>
          <%= f.text_field :phone, :class=>"form-control", :required => true %>
        </div>
      </div>
      <div class="control-group form-group">
        <div class="controls">
          <label>Password:</label>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, :class=>"form-control", :required => true, autocomplete: "off" %>
        </div>
      </div>
      <div class="control-group form-group">
        <div class="controls">
          <label>Confirm Password:</label>
          <%= f.password_field :password_confirmation, :class=>"form-control", :required => true, autocomplete: "off" %>
        </div>
      </div>
      <div id="success"></div>
      <!-- For success/fail messages -->
      <div class="actions">
        <%= f.submit "Sign up", :class=>"btn btn-primary" %>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <!-- /.row -->
  <hr>
  <!-- Footer -->
  <%= render :partial => 'layouts/footer' %>
</div>
<!-- /.container -->
